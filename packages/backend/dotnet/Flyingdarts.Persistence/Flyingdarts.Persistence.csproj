<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <LangVersion>latest</LangVersion>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Title>Flyingdarts.Persistence</Title>
    <VersionPrefix>1.3.7-alpha.0</VersionPrefix>
    <Version>$(VersionPrefix)</Version>
    <PackageId>Flyingdarts.Persistence</PackageId>
    <Authors>Flyingdarts</Authors>
    <Description>A NuGet package with persistence models</Description>
    <PackageProjectUrl>https://github.com/flyingdarts/Flyingdarts.Persistence</PackageProjectUrl>
    <RepositoryUrl>https://github.com/flyingdarts/Flyingdarts.Persistence.git</RepositoryUrl>
    <LicenseFile>LICENSE.md</LicenseFile>
    <PackageTags>Flyingdarts Persistence DynamoDb</PackageTags>
    <PackageReleaseNotes>PlayerId is now behaves like GameId, it is == the CreatedAt = DateTime.UtcNow.Ticks</PackageReleaseNotes>
    <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="AWSSDK.Core" Version="4.0.0.16" />
    <PackageReference Include="AWSSDK.DynamoDBv2" Version="4.0.3" />
    <PackageReference Include="AWSSDK.SimpleSystemsManagement" Version="4.0.2.4" />
    <PackageReference
      Include="Microsoft.Extensions.Configuration"
      Version="10.0.0-preview.6.25358.103"
    />
    <PackageReference Include="Microsoft.Extensions.Options" Version="10.0.0-preview.6.25358.103" />
  </ItemGroup>
  <ItemGroup>
    <Content Include="README.md">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </Content>
    <Content Include="LICENSE.md">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </Content>
  </ItemGroup>
  <ItemGroup>
    <PackageVersion Update="Microsoft.Extensions.Options" Version="8.0.0" />
  </ItemGroup>
</Project>
